@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Assignment.Models.Person
<!DOCTYPE html>
<html lang="en">
 <head>
     <title>Đăng nhập</title>
 </head>
 <body>
   
   
<div class= "d-flex justify-content-center mt-5">
    <div class="bg-info bg-opacity-25 w-50 p-4 rounded-3">
            @if (ViewData.ContainsKey("SuccessMessage"))
            {
                <p class="text-success text-center">@ViewData["SuccessMessage"]</p>
            }
        <div class="d-flex justify-content-between">
            <div class="w-50 pe-3">
                <button class="w-100 btn btn-primary">Đăng nhập  bằng Facebook <i class="bi bi-facebook"></i></button>
            </div>
            <div class="w-50 ps-3">
                <button class="w-100 btn btn-danger">Đăng nhập  bằng Google <i></i></button>
            </div>
        </div>
        <p class="text-center mt-3 fw-bold">HOẶC</p>
        <form method="post" asp-action="Home">
            <input class="form-control" type="email" placeholder="Email" asp-for="Email" />
            <p class="text-danger">@ViewData["Error1"]</p>
            <input class="form-control mt-4" type="password" placeholder="Password *" asp-for="Password" />
            <p class="text-danger">@ViewData["Error2"]</p>
            <p class="text-danger">@ViewData["Error"]</p>
            <div class = "d-flex justify-content-between mt-5">
                <input class="btn btn-primary" type="submit" value="Đăng Nhập" />
                <a href="resetpass">Quên mật khẩu</a>
            </div>
        </form>
        <hr />
        <p class="text-center">
            Bạn chưa có tài khoản? 
            <a href="Signup" class="text-decoration-none">Đăng ký</a>
        </p>
    </div>
</div>
</body>
</html>