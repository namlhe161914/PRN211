@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers


@model IEnumerable<Assignment.Models.Genre>


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Manage Genre</title>
    </head>
    <body class="sb-nav-fixed">

        <!-- Admin navbar -->
    <div id="layoutSidenav" style="display:flex">
        <!-- Admin Slidenav -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav" style="display:block">
                        <div class="sb-sidenav-menu-heading">Manage</div>

                        <a class="nav-link" asp-action="ListMovies">
                            <i class="bi bi-tree sb-nav-link-icon"></i>
                            Movie
                        </a>
                        <a class="nav-link" asp-action="ListGenres">
                            <i class="bi bi-tags sb-nav-link-icon"></i>
                            Genre
                        </a>
                        <a class="nav-link" asp-action="ListPerson">
                            <i class="bi bi-tags sb-nav-link-icon"></i>
                            Person
                        </a>
                        <a class="nav-link" asp-action="Statistical">
                            <i class="bi bi-tags sb-nav-link-icon"></i>
                            Statistical
                        </a>

                    </div>
                </div>
            </nav>
        </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">


                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-danger">@ViewBag.Message</div>
                    }


                        <h1 class="mt-4">Manage Genre</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">All current genre in system</li>
                        </ol>


                        <!-- Active User Account Table -->
                        <div class="card mb-4">
                            <div class="card-header fw-bold">
                                <i class="bi bi-table"></i>
                                Product Table
                            <span class="float-end">

                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#blockBtnXYZC">
                                    <i class="bi bi-plus-square"></i> Add new genre
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="blockBtnXYZC" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">New Genre</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                                <form action="CreateGenres" method="POST">
                                                    <div class="modal-body">
                                                        

                                                                <div class="form-outline mb-3">
                                                                    <label class="form-label" for="img3Example">Description <span style="color: red; font-weight: bold">*</span></label>
                                                        <input type="text"  class="form-control form-control-lg"
                                                                required name="Description" />
                                                                </div>
                                                            

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button id="update-profile-btn" type="submit" class="btn btn-danger" name="action" value="createCategory">Create</button>
                                                    </div>
                                                </form>
                                        </div>
                                    </div>
                                </div>
                            </span>
                            </div>

                            <div class="card-body">
                                <table id="activeUserAccountTable">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var p in Model)
                                    {

                                        <tr>
                                            <td>@p.GenreId</td>
                                            <td>@p.Description</td>

                                            <td>
                                                <!-- Delete btn -->
                                                <span>
                                                    <!-- Modal -->
                                                    <a asp-action="EditGenre" asp-route-id="@p.GenreId" class="btn btn-outline-success w-100">
                                                        Update
                                                    </a>
                                                </span>

                                                <span>
                                                    <!-- Button trigger modal -->
                                                    <a class="btn btn-outline-success w-100" asp-action="DeleteGenre" asp-route-id="@p.GenreId" style="color:red" onclick="return confirm('Bạn có chắc bạn muốn xóa thể loại phim này ?')">Delete</a>


                                                </span>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </main>
                <!-- Footer -->
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="js/datatables-simple-demo.js"></script>
    </body>
</html>

