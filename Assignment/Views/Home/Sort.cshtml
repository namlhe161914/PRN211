@model IEnumerable<Assignment.Models.Movie>


<head>
    <title>Trang web phim đơn giản</title>
    <style>

        main {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 100%;
        }

        .left {
            margin-top: 8px;
            margin-left: 70px;
            width: 20%;
        }

            .left ul {
                list-style: none;
            }

                .left ul li a {
                    text-decoration: none;
                }


        .right {
            width: 80%;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-gap: 20px;
            margin-right: 20px;
            margin-top: 20px;
        }

        .movie-item {
            position: relative;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0px 2px 8px 2px #888888;
        }

            .movie-item h3 {
                width: 100%;
                color: blue;
                text-align: center;
                white-space: nowrap; /* Không cho phép tên xuống dòng */
                overflow: hidden; /* Ẩn phần ngoài phạm vi của thẻ */
                text-overflow: ellipsis; /* Thêm dấu ... khi tên quá dài */
                max-width: 250px;
            }

            .movie-item #one {
                text-align: left;
                margin-bottom: 0;
            }

            .movie-item #two {
                text-align: left;
                margin-bottom: 24px;
            }

            .movie-item img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                display: block;
            }

            .movie-item button {
                position: absolute;
                background-color: rgb(39, 100, 255);
                color: white;
                left: 96px;
                bottom: 4px;
                font-size: 16px;
            }

                .movie-item button:hover {
                    background-color: rgb(2, 2, 195);
                }

    </style>
</head>
<body>
    <div class="d-flex flex-column">
        <div class=" d-flex justify-content-end mt-3">
            <select id="type" class="m-3" onchange="change()">
                <option>Sắp Xếp</option>
                <option value="1" style="width:20%">Cao->Thấp</option>
                <option value="2" style="width:20%">Thấp->Cao</option>
            </select>
        </div>
        <div>
            <main>
                <div class="left">
                    <h1>Thể loại</h1>
                    <ul class="list-unstyled">
                        <li>
                            <a href="/Home">Tất cả</a>
                        </li>
                        @foreach (Genre p in ViewBag.Genres)
                        {
                            <li>
                                <a href="/Home?pid=@p.GenreId">@p.Description</a>
                            </li>
                        }
                    </ul>
                </div>



                <div class="right">


                    @if (Model.Count() != 0)
                    {
                        @foreach (Movie m in Model)
                        {
                            <a asp-action="Detail" asp-route-id="@m.MovieId" class="text-decoration-none" style="color: black">
                                <div class="movie-item">
                                    <div>
                                        <img src="~/Image/@m.Image" alt="girl" />
                                        <h3>@m.Title</h3>
                                        <p id="one">Năm: @m.Year</p>
                                        <p id="two">Loại: @m.Genre.Description</p>
                                        <button type="submit">Đánh giá</button>
                                    </div>
                                </div>
                            </a>
                        }

                    }
                    else
                    {
                        <h3 style="margin-left: 60%; width: 500px;">Không tìm thấy kết quả tương ứng!</h3>
                    }
                </div>
            </main>
        </div>

    </div>
    <script>
        var selectElement = document.getElementById('type');

        selectElement.addEventListener('change', (event) => {
            var selectedValue = event.target.value;
            // Tạo một đối tượng XMLHttpRequest
            var xhr = new XMLHttpRequest();
            // Xác định phương thức POST hoặc GET
            var method = 'GET';
            // Xác định URL và tham số truy vấn

            var url = `../Sort/${selectedValue}`;
            // Mở kết nối
            xhr.open(method, url);

            // Gửi yêu cầu
            xhr.send();

            // Chuyển hướng đến URL tương ứng
            window.location.href = url;

            getData();
        });
    </script>
</body>
