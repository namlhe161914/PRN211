@model Assignment.Models.Movie;

<head>
    <style>

        main {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 100%;
        }

        .movie-image {
            width: 40%;
            margin-left: 20px;
        }

            .movie-image img {
                width: 90%;
                height: 600px;
                margin-top: 10px;
            }

            .movie-image button {
                background-color: rgb(39, 100, 255);
                color: white;
                border: none;
                border-radius: 5px;
                padding: 6px 10px;
                font-size: 16px;
            }

                .movie-image button:active {
                    background-color: rgb(2, 2, 195);
                }

        .movie-details {
            width: 60%;
            margin-right: 10px;
            text-align: left;
            display: flex;
            flex-direction: column;
        }

            .movie-details hr {
                border-style: solid;
                border-width: 1px 0 0;
                border-color: #ccc;
            }

        .name-detail {
            margin-bottom: 20px;
        }

        .comment {
        }

        .name-detail textarea {
            width: 100%;
            height: 100px;
        }

        .name-detail h1 {
            font-size: 50px;
        }

        .separator {
            margin: 5px 0;
            border: 1px solid #ccc;
        }

        .name-detail button {
            background-color: rgb(39, 100, 255);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 6px 10px;
            font-size: 16px;
            border-top: 1px solid #ccc;
        }

            .name-detail button:hover {
                background-color: rgb(2, 2, 195);
            }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .iframe-container {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 */
            height: 0;
            overflow: hidden;
            max-width: 90%;
            max-height: 90%;
        }

            .iframe-container iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

        .show-iframe {
            display: block;
        }
    </style>
</head>

<body>
    <main>

        @foreach (Movie c in ViewBag.movies)
        {
            <div class="movie-image">
                <img src="~/Image/@c.Image" alt={selectedMovie.name} />
                <button id="showIframe" type="button">Xem Trailer</button>
            </div>

            <div class="movie-details">

                <div class='name-detail'>
                    <h1>@c.Title</h1>
                    <p><b>Thể loại: </b>@c.Genre.Description</p>
                    <p><b>Điểm đánh giá: </b>@ViewBag.avg</p>
                    <p><b>Mô tả: </b>@c.Description</p>
                    <a asp-action ="Comment" asp-route-id="@c.MovieId"><button type="submit">Đánh giá</button></a>

                </div>
                <div class="separator"></div>
                <div class='comment'>
                    <h1>Bình luận</h1>
                    @foreach (Rate r in ViewBag.rates)
                    {
                        <p><b>@r.Person.Fullname:</b>@r.Comment</p>
                    }
                </div>

            </div>
            <div class="overlay">
                <div class="iframe-container">
                    <iframe src="https://www.youtube.com/embed/tgbNymZ7vqY"></iframe>
                </div>
            </div>
        }
    </main>

    <script>
        var iframe = document.querySelector(".iframe-container iframe");
        var overlay = document.querySelector(".overlay");
        var button = document.getElementById("showIframe");

        button.onclick = function () {
            overlay.classList.add("show-iframe");
        };

        overlay.onclick = function (e) {
            if (e.target === overlay) {
                overlay.classList.remove("show-iframe");
                window.location("/Home/Detail/2");
            }
        };
    </script>

</body>